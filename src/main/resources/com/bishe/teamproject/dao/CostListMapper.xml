<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.teamproject.dao.CostListMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.bishe.teamproject.model.CostList">
                    <id column="id" property="id"/>
                    <result column="team_id" property="teamId"/>
                    <result column="name" property="name"/>
                    <result column="price" property="price"/>
                    <result column="ctime" property="ctime"/>
                    <result column="remarks" property="remarks"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, team_id, name, price, ctime, remarks
        </sql>

    <resultMap id="queryCostListAllMap" type="com.bishe.teamproject.model.CostList" extends="BaseResultMap">
        <association property="team" javaType="com.bishe.teamproject.model.Team">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
        </association>
    </resultMap>

    <select id="queryCostListAll" resultMap="queryCostListAllMap">
        SELECT
            cost.*,t.name as tname
        FROM
            team_project.cost_list cost
                LEFT JOIN team_project.team t ON t.id=cost.team_id
        <where>
            <if test="name!=null and name!=''">
                and cost.name like '%${name}%'
            </if>
            <if test="teamId != null">
                and team_id=#{teamId}
            </if>
        </where>
        ORDER BY
            cost.id DESC
    </select>
</mapper>