<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.teamproject.dao.TeamMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.bishe.teamproject.model.Team">
                    <id column="id" property="id"/>
                    <result column="name" property="name"/>
                    <result column="create_by" property="createBy"/>
                    <result column="type" property="type"/>
                    <result column="user_id" property="userId"/>
                    <result column="create_time" property="createTime"/>
                    <result column="status" property="status"/>
                    <result column="images" property="images"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, name, create_by, type, user_id, create_time, status, images
        </sql>

<!--    高级查询社团信息-->
    <resultMap id="queryTeamListMap" type="com.bishe.teamproject.model.Team" extends="BaseResultMap">
            <!--配置社团类型-->
            <association property="typeInfo" javaType="com.bishe.teamproject.model.TypeInfo">
                <id column="id" property="id"></id>
                <result column="typeName" property="name"></result>
            </association>
            <association property="userInfo" javaType="com.bishe.teamproject.model.UserInfo">
                <id column="id" property="id"></id>
                <result column="username" property="username"></result>
            </association>
    </resultMap>
    <select id="queryTeamList" parameterType="com.bishe.teamproject.model.Team"
            resultMap="queryTeamListMap">
        select
            t.*,type.name as typeName,u.username
        from team_project.team t
            left join type_info type on type.id = t.type
            left join userinfo u on u.id = t.user_id
        <where>
            <if test="name!=null and name!=''">
                and t.name like '%${name}%'
            </if>
            <if test="type!=null">
                    and t.type=#{type}
            </if>
        </where>
    </select>

    <select id="queryTeamInfoByUserId" resultType="com.bishe.teamproject.model.Team">
        select *
        from team
        where user_id=#{userId};
    </select>


    <select id="queryById" resultMap="queryTeamListMap">
        select
            t.*,type.name as typeName,u.username
        from team_project.team t
        left join type_info type on type.id = t.type
        left join userinfo u on u.id = t.user_id
        where t.id=#{id}
    </select>

    <select id="queryMyteamList" resultMap="queryTeamListMap">
        SELECT
            t.*,users.username
        FROM
            team t
        LEFT JOIN team_user tu ON tu.team_id = t.id
        LEFT JOIN userinfo users on users.id=t.user_id
        WHERE
            tu.tel =#{tel}
    </select>

</mapper>