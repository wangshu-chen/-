<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.teamproject.dao.ApplyInfoMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.bishe.teamproject.model.ApplyInfo">
                    <id column="id" property="id"/>
                    <result column="realname" property="realname"/>
                    <result column="sex" property="sex"/>
                    <result column="number" property="number"/>
                    <result column="tel" property="tel"/>
                    <result column="email" property="email"/>
                    <result column="address" property="address"/>
                    <result column="qq" property="qq"/>
                    <result column="weixin" property="weixin"/>
                    <result column="content" property="content"/>
                    <result column="create_time" property="createTime"/>
                    <result column="status" property="status"/>
                    <result column="team_id" property="teamId"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, realname, sex, number, tel, email, address, qq, weixin, content, create_time, status, team_id
        </sql>
    <insert id="insertAppList" parameterType="com.bishe.teamproject.model.ApplyList">
        insert into team_project.apply_list (app_id, content, status, app_time, app_author)
        values (#{appid},#{content},#{status},#{appTime},#{appAuthor})
    </insert>
    <update id="updateStatus" parameterType="com.bishe.teamproject.model.ApplyInfo">
        update team_project.apply_info set status=#{status}
        where id = #{id}
    </update>
    
    <resultMap id="queryAppListMap" type="com.bishe.teamproject.model.ApplyInfo"
               extends="BaseResultMap">
        <association property="team" javaType="com.bishe.teamproject.model.Team">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
        </association>
    </resultMap>


    <select id="queryAppList"
            resultMap="queryAppListMap"
            parameterType="com.bishe.teamproject.model.ApplyInfo">
        SELECT
            info.*,
            t. NAME
        FROM
            team_project.apply_info info
            LEFT JOIN
            team_project.team t ON t.id = info.team_id
        <where>
            <if test="tel!=null and tel!=''">
                and tel like '%${tel}%'
            </if>
            <if test="teamId!=null">
                and team_id=#{teamId}
            </if>
            <if test="team!=null">
                <if test="team.userId!=null">
                    and t.user_id=#{team.userId}
                </if>
            </if>
        </where>
    </select>

    <resultMap id="queryAppListByAppIdMap"
               type="com.bishe.teamproject.model.ApplyList">
        <id column="id" property="id"/>
        <result column="app_id" property="appid"/>
        <result column="content" property="content"/>
        <result column="status" property="status"/>
        <result column="app_time" property="appTime"/>
        <result column="app_author" property="appAuthor"/>
        <association property="userinfo" javaType="com.bishe.teamproject.model.UserInfo">
            <result column="id" property="id"/>
            <result column="username" property="username"/>
        </association>
    </resultMap>

    <select id="queryAppListByAppId"
            resultMap="queryAppListByAppIdMap"
            parameterType="int"
            >
        SELECT
            list.*,info.username
        FROM
            team_project.apply_list list
            LEFT JOIN
            team_project.userinfo info ON info.id = list.app_author
        <where>
            app_id=#{appId}
        </where>
    </select>
    <select id="queryApplyInfoByTeamIdAndTel" resultType="com.bishe.teamproject.model.ApplyInfo">
        select * from team_project.apply_info
        where tel=#{tel} and team_id=#{teamId}
    </select>

</mapper>